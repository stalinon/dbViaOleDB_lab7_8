<Window x:Class="dataBaseWPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dataBaseWPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        Title="Введите значение" Height="160" Width="400">
    <Grid >
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFD4D4D4"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="TextBox"  HorizontalAlignment="Center" Margin="0,30,0,15" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Height="30"/>
        <Button  x:Name="Button"  Content="OK" VerticalAlignment="Bottom" Height="30" Margin="150,15,150,30" Click="Button_Click"/>
    </Grid>
</Window>
